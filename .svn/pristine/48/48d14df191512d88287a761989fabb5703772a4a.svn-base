		]]>
	</sql>
	
	
	<!-- 根据订单编号查询 -->
	<sql id="getByOrderNo">
		<![CDATA[
			SELECT 
				id, orderNo, sourceId, carId, orderBeforeId, shipperMemberId, driverMemberId,
				confirmOrderTime, confirmGoodsTime, cancelOrderTime, orderStatus, transportAmt
			 FROM order_info 
			 WHERE orderNo = :orderNo
		]]>
	</sql>
	
	<!-- 查询支付预付款过期的订单信息。ps：过期时间为3天。3天的秒数为 259200 -->
	 <sql id="queryPrePaymtenOverdue">
	 	<![CDATA[
	    	SELECT id, orderNo, sourceId, orderBeforeId FROM order_info oi WHERE 
				oi.transStatus = 0 AND oi.orderStatus = 1 AND
			   UNIX_TIMESTAMP(now()) - UNIX_TIMESTAMP(oi.createTime) >= 259200
	    ]]>
	</sql> 
	
	<!-- 根据id集合更新订单信息多种状态 -->
	 <sql id="updateMultiStatusByIds">
	 	<![CDATA[
	    	UPDATE 
	    		order_info SET orderStatus = :orderStatus, transStatus = :transStatus,
		    		closeReason = :closeReason, updateTime = now(), updateUserId=:updateUserId
			WHERE
				 id IN (
					<#list ids as theId>
						<#if theId_index gt 0>
								,${theId}
						<#else>
								${theId}
						</#if>
					</#list>
				)
	    ]]>
	</sql> 
	
	<!-- 根据订单编号集合查询 -->
	 <sql id="queryByOrderNos">
	 	<![CDATA[
	    	SELECT id, orderNo, sourceId, orderBeforeId FROM order_info  
			WHERE
				 orderNo IN (
					<#list orderNos as orderNo>
						<#if orderNo_index gt 0>
								,"${orderNo}"
						<#else>
								"${orderNo}"
						</#if>
					</#list>
				)
	    ]]>
	</sql> 
	
</sqlMap>
